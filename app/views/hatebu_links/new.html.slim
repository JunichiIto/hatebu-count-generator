h1 Hatebu count link generator

= form_for @hatebu, url: hatebu_link_path, html: { class: 'form-horizontal' } do |f|
  .form-group
    = f.label :page_url, class: 'form-label'
    = f.text_field :page_url, class: 'form-control js-focus-on-load js-select-on-focus'
  .form-action
    = f.submit '送信', class: 'btn btn-primary'

hr

- link_html = to_hatebu_count_link(@hatebu.page_url)
textarea.view-source.js-select-on-focus class='form-control' = link_html
p
textarea.view-source.js-select-on-focus class='form-control' = ReverseMarkdown.convert(link_html)

.hatebu-image= link_html

